{% extends 'base.html.twig' %}

{% block title %}Quori - Questions/Reponses{% endblock %}

{% block body %}
    <ul>
        {% for question in questions %}
            <div class="block d-flex flex-rox mb-20">
                {% include "./partials/_rating.html.twig" with {rating: question.rating, from: 'question', id: question.id} %}
                <a href="{{ path("show_question", { id: question.id }) }}" class="flex-fill d-flex flex-column">
                    <div class="mb-20 question-content pb-20">
                        <h3 class="mb-20">{{ question.title }}</h3>
                        <p>{{ question.content }}</p>
                    </div>
                    <div class="d-flex flex-row justify-content-between">
                        <div class="d-flex flex-row align-items-center">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR0W14ir2AkRjKVT39ZGYjlwdYCdZmQqtS5bI3Z62LoU0q_CnluvLR5P3XyWJPalmN7r1g&usqp=CAU" alt="" class="avatar-small mr-20">
                            <small>Demand√© par <span class="clickable">Marcel Patulacci</span> le <span>{{ question.createdAt | format_datetime('short', locale= 'fr') }}</span></small>
                        </div>    
                        <div class="d-flex flex-row align-items-center">
                            <i class="fa-solid fa-comment mr-20"></i>
                            <p>{{ question.nbResponse }}</p>
                        </div>

                    </div>
                </a>
            </div>
        {% endfor %}
    </ul>
{% endblock %}
