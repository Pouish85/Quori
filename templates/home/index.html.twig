{% extends 'base.html.twig' %}

{% block title %}Quori - Questions/Reponses{% endblock %}

{% block body %}
    <ul>
        {% for question in questions %}
            <a href="{{ path("show_question", { id: question.id }) }}" class="block d-flex flex-rox mb-20">
                <div class="d-flex flex-column mr-20 align-items-center">
                    <i class="fa-solid fa-arrow-up {{ question.rating > 0 ? "rating-up : '' " }} "></i>
                    <p 
                        {% if question.rating > 0  %}
                            class="rating-up"
                        {% elseif question.rating < 0 %}
                            class="rating-down"
                        {% endif %}>{{ question.rating }}</p>
                    <i class="fa-solid fa-arrow-down {{ question.rating < 0 ? "rating-down : '' " }}"></i>
                </div>
                <div class="flex-fill d-flex flex-column">
                    <div class="mb-20 question-content pb-20">
                        <h3 class="mb-20">{{ question.title }}</h3>
                        <p>{{ question.content }}</p>
                    </div>
                    <div class="d-flex flex-row justify-content-between">
                        <div class="d-flex flex-row align-items-center">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR0W14ir2AkRjKVT39ZGYjlwdYCdZmQqtS5bI3Z62LoU0q_CnluvLR5P3XyWJPalmN7r1g&usqp=CAU" alt="" class="avatar-small mr-20">
                            <small>Demand√© par <span class="clickable">Marcel Patulacci</span></small>
                        </div>    
                        <div class="d-flex flex-row align-items-center">
                            <i class="fa-solid fa-comment mr-20"></i>
                            <p>{{ question.nbResponse }}</p>
                        </div>

                    </div>
                </div>
            </a>
        {% endfor %}
    </ul>
{% endblock %}
